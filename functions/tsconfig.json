{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "noImplicitReturns": true,
        "outDir": "lib",
        "sourceMap": true,
        "strict": true,
        "target": "ES2022",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "isolatedModules": true
    },
    "compileOnSave": true,
    "include": [
        "src/**/*"
    ]
}